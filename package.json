{
	"name": "oy2",
	"version": "1.0.0",
	"description": "A minimalist Oy app - send Oys to your friends",
	"main": "worker/index.ts",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"deploy": "vite build && wrangler deploy",
		"lint": "biome lint .",
		"format": "biome format . --write",
		"check": "tsc -b",
		"generate-vapid": "node scripts/generate-vapid-keys.js",
		"db:create": "wrangler d1 create oy2-db",
		"db:migrate": "wrangler d1 migrations apply oy2-db --remote",
		"db:migrate:local": "wrangler d1 migrations apply oy2-db --local"
	},
	"keywords": [
		"oy",
		"pwa",
		"social",
		"cloudflare-workers"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@block65/webcrypto-web-push": "^1.0.2",
		"@kobalte/core": "^0.13.11",
		"hono": "^4.11.4",
		"leaflet": "^1.9.4",
		"solid-js": "^1.9.10"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@cloudflare/vite-plugin": "^1.20.1",
		"@cloudflare/workers-types": "^4.20260113.0",
		"@types/leaflet": "^1.9.12",
		"@types/node": "^20.14.9",
		"typescript": "^5.6.3",
		"vite": "^7.3.1",
		"vite-plugin-pwa": "^1.2.0",
		"vite-plugin-solid": "^2.11.10",
		"wrangler": "^4.58.0"
	},
	"packageManager": "yarn@4.12.0"
}
