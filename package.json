{
	"name": "oy2",
	"version": "1.0.0",
	"description": "A minimalist Oy app - send Oys to your friends",
	"main": "worker/index.ts",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"deploy": "vite build && wrangler deploy",
		"deploy:dev": "CLOUDFLARE_ENV=dev vite build && wrangler deploy --env dev",
		"deploy:backup": "wrangler deploy --config backup-worker/wrangler.toml",
		"test": "tsx --test tests/worker/*.test.ts",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format .",
		"format:fix": "biome format --write .",
		"check": "tsc -b",
		"db:migrate:local": "tsx scripts/migrate.ts",
		"db:migrate:remote": "tsx scripts/migrate-remote.ts"
	},
	"keywords": [
		"oy",
		"pwa",
		"social",
		"cloudflare-workers"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"@block65/webcrypto-web-push": "^1.0.2",
		"@capacitor/android": "^8.0.2",
		"@capacitor/core": "^8.0.2",
		"@capacitor/geolocation": "^8.1.0",
		"@capacitor/ios": "^8.0.2",
		"@capacitor/push-notifications": "^8.0.0",
		"@capgo/capacitor-social-login": "^8.3.0",
		"@gledly/capacitor-webauthn": "^0.2.7",
		"@kobalte/core": "^0.13.11",
		"@simplewebauthn/server": "^13.2.2",
		"@solidjs/router": "^0.15.4",
		"hono": "^4.11.4",
		"leaflet": "^1.9.4",
		"obscenity": "^0.4.6",
		"pg": "^8.17.2",
		"solid-js": "^1.9.10"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@capacitor/assets": "^3.0.5",
		"@capacitor/cli": "^8.0.2",
		"@cloudflare/vite-plugin": "^1.21.1",
		"@cloudflare/workers-types": "^4.20260120.0",
		"@types/leaflet": "^1.9.21",
		"@types/node": "^25.0.9",
		"@types/pg": "^8.16.0",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"vite-plugin-pwa": "^1.2.0",
		"vite-plugin-solid": "^2.11.10",
		"wrangler": "^4.59.3"
	},
	"packageManager": "yarn@4.12.0"
}
