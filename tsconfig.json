  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "strict": true,
    "noEmit": true,
    "types": ["vite/client"]
  },
  "include": ["src", "index.html", "vite.config.js"],
  "exclude": ["worker", "dist", "build", "public"]
}
